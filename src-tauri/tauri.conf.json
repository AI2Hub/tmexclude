{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tmexclude",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "startDragging": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/tray_icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "me.lightquantum.tmexclude",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Preferences",
        "url": "/main/stats",
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "height": 600,
        "width": 800,
        "transparent": true
      },
      {
        "label": "about",
        "title": "",
        "url": "/about",
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "height": 600,
        "width": 800
      }
    ],
    "macOSPrivateApi": true
  }
}
